<% include ./partials/header.ejs %>

    <div class="min-h-screen flex justify-center items-center">
        <div class="bg-white p-8 rounded shadow-md w-full sm:w-96">
            <!-- Sign Up Form -->
            <form action="/register" method="post">
                <h2 class="text-3xl font-semibold text-center mb-6" style="color: #0b0b0b;">Create your Account</h2>
                <div class="mb-4">
                    <label for="username" class="block text-lg font-medium text-gray-700 mb-1">Username</label>
                    <input type="text" id="username" name="username" class="focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md py-2 px-3">
                </div>
                <div class="mb-4">
                    <label for="signup-email" class="block text-lg font-medium text-gray-700 mb-1">Email Address</label>
                    <input type="email" id="signup-email" name="email" class="focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md py-2 px-3">
                </div>
                <div class="mb-4">
                    <label for="signup-password" class="block text-lg font-medium text-gray-700 mb-1">Password</label>
                    <input type="password" id="signup-password" name="password" class="focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md py-2 px-3">
                </div>
                <div class="mb-4">
                    <label for="full-name" class="block text-lg font-medium text-gray-700 mb-1">Full Name</label>
                    <input type="text" id="full-name" name="fullname" class="focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md py-2 px-3">
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-md hover:bg-red-600 focus:outline-none focus:bg-red-600 text-lg font-medium">Sign Up</button>
                    <!-- Link to Login Form -->
                    <a href="/" class="text-lg text-blue-500 hover:text-blue-600">Login</a>
                </div>
            </form>
        </div>
    </div>
<% include ./partials/footer.ejs %>
